{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es6",
    "moduleResolution": "node",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "removeComments": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "sourceMap": false,
    "declaration": true,
    "lib": ["es2015", "es2016", "es2017", "dom"]
  },
  "include": ["./src/*"],
  "exclude": ["node_modules"]
}

{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "downlevelIteration": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "noImplicitAny": false,
    "lib": ["es2015", "es2016", "es2017", "dom"]
  },
  "include": [
    "src/index.ts",
    "../js/src/Modules/Verto/util/rtc/*",
    "../js/src/Modules/Verto/util/storage/*",
    "../js/src/Modules/Verto/webrtc/Call.native.ts"
  ],
  "exclude": ["**/__mocks__/**/*", "./examples/*"]
}

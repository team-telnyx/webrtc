{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es6",
    "moduleResolution": "node",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "removeComments": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "sourceMap": false,
    "declaration": true,
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "resolveJsonModule": true
  },
  "include": [
    "./src/index.ts",
    "../js/src/Modules/Verto/util/webrtc/*",
    "../js/src/Modules/Verto/util/storage/*",
    "../js/src/Modules/Verto/webrtc/Call.native.ts"
  ],
  "exclude": ["**/__mocks__/**/*"]
}
